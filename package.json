{
  "name": "@percy/nightmare",
  "version": "1.0.3",
  "description": "Nightmare client library for visual regression testing with Percy (https://percy.io).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "yarn build",
    "test": "percy exec -- mocha tests/*spec.js",
    "prepublishOnly": "yarn build",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percy/percy-nightmare.git"
  },
  "keywords": [
    "nightmare",
    "testing"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "resolutions": {
    "ecstatic": "3.2.2"
  },
  "author": "Perceptual Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/percy/percy-nightmare/issues"
  },
  "homepage": "https://github.com/percy/percy-nightmare#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "chai": "^4.2.0",
    "http-server": "^0.11.1",
    "mocha": "^6.0.2",
    "nightmare": "^3.0.1",
    "semantic-release": "^15.13.3",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@percy/agent": "~0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
